<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InternacPaciente[0].Id_expediente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternacPaciente[0].Id_personal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternacPaciente[0].Fecha_ingreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternacPaciente[0].Imp_diagnostica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternacPaciente[0].Tratamiento)
