        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_expediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_personal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_ingreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imp_diagnostica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tratamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoriaClinicaGral)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id_internacion">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id_internacion">Details</a> |
